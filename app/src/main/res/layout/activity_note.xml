<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".activities.NoteActivity">

    <RelativeLayout
        android:id="@+id/menuLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">
    <ImageView
        android:id="@+id/arrow_back"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_arrow_back"
        android:layout_alignParentLeft="true">

    </ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false">
    <ImageView
        android:id="@+id/impNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_imp_unselected_icon"
        android:tag="imp_unMarked"
        android:layout_alignParentRight="false">

    </ImageView>
    <ImageView
        android:id="@+id/save_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:tag="save_icon_unchecked"
        android:src="@drawable/ic_check_icon"
        android:clickable="true"
        >

    </ImageView>
    </LinearLayout>
</RelativeLayout>

<ScrollView
    android:layout_below="@+id/menuLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/noteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_input"
        android:ems="10"
        android:fontFamily="@font/amaranth"
        android:hint="Note Title"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold" />

    <TextView
         android:id="@+id/note_creation_date"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:fontFamily="@font/amaranth"
         android:text="Note Creation Date">

     </TextView>

    <EditText
        android:id="@+id/noteDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_input"
        android:ems="10"
        android:fontFamily="@font/amaranth"
        android:gravity="top"
        android:hint="Type Notes here.."
        android:includeFontPadding="false"
        android:inputType="textMultiLine"
        android:minHeight="250sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold" />


</LinearLayout>
</ScrollView>

    <include
        layout="@layout/miscellanous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-60dp"></include>
</RelativeLayout>